{
  "parser": "babel-eslint",
  "extends": ["standard", "prettier", "prettier/flowtype", "prettier/react"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "react/prefer-stateless-function": "off",
    "prettier/prettier": "error"
  },
  "plugins": ["prettier"],
  "globals": {
    "ROOT_DIR": true,
    "MODEL_DIR": true,
    "testDBUtil": true
  },
  "overrides": [
    {
      "files": "*.test.js",
      "rules": {
        "handle-callback-err": "off",
        "no-redeclare": "off",
        "no-unused-expressions": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}
