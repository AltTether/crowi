{
  "parser": "babel-eslint",
  "extends": ["standard", "prettier", "prettier/flowtype", "prettier/react"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
    "react/prefer-stateless-function": "off",
    "prettier/prettier": "error"
  },
  "plugins": ["prettier"]
}
